<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<BorderPane
  id="root" xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="client.scenes.SplashCtrl"
  prefHeight="1080.0" prefWidth="1920.0"
>
  <center>
    <VBox maxWidth="640" BorderPane.alignment="CENTER" alignment="CENTER">
      <Region styleClass="margin" VBox.vgrow="ALWAYS"/>
      <Text styleClass="title" text="Quizzzzz" textAlignment="CENTER" BorderPane.alignment="CENTER"/>
      <Region styleClass="margin" VBox.vgrow="ALWAYS" maxHeight="160"/>
      <Button styleClass="border, rounded, drop-shadow" onMouseClicked="#playMultiplayer" text="Multiplayer"/>
      <Region styleClass="margin" VBox.vgrow="ALWAYS" maxHeight="40"/>
      <Button styleClass="border, rounded, drop-shadow" onMouseClicked="#playSingleplayer" text="Singleplayer"/>
      <Region styleClass="margin" VBox.vgrow="ALWAYS" maxHeight="40"/>
      <Button styleClass="border, rounded, drop-shadow" onMouseClicked="#exit" text="Exit"/>
      <Region styleClass="margin" VBox.vgrow="ALWAYS"/>
    </VBox>
  </center>
</BorderPane>
