<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane id="root" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.SplashCtrl">
    <center>
        <VBox alignment="CENTER" maxWidth="640" BorderPane.alignment="CENTER">
            <Region styleClass="margin" VBox.vgrow="ALWAYS" />
            <Text styleClass="title" text="Quizzzzz" textAlignment="CENTER" BorderPane.alignment="CENTER" />
            <Region maxHeight="160" styleClass="margin" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <children>
                    <Button onMouseClicked="#playSingleplayer" styleClass="border, rounded, drop-shadow" text="Singleplayer" />
                    <Region maxHeight="40" prefHeight="40.0" prefWidth="48.0" styleClass="margin" />
                    <Button onMouseClicked="#playMultiplayer" styleClass="border, rounded, drop-shadow" text="Multiplayer" />
                </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <children>
                    <Button id="admin" onMouseClicked="#showAdminPanel" styleClass="border, rounded, drop-shadow" text="Admin Panel" />
                    <Region maxHeight="40" prefHeight="40.0" prefWidth="48.0" styleClass="margin" />
                    <Button id="reconnect" onMouseClicked="#reconnect" styleClass="border, rounded, drop-shadow" text="Reconnect" />
                </children>
            </HBox>
            <Region maxHeight="40" styleClass="margin" VBox.vgrow="ALWAYS" />
            <Button id="exit" fx:id="exit" onMouseClicked="#exit" styleClass="border, rounded, drop-shadow" text="Exit" />
            <Region styleClass="margin" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>
   <right>
      <HBox prefHeight="1035.0" prefWidth="164.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="exit" fx:id="exit1" alignment="TOP_RIGHT" onMouseClicked="#exit" styleClass="border, rounded, drop-shadow" text="?" />
         </children>
      </HBox>
   </right>
   <top>
      <Region prefHeight="45.0" prefWidth="1920.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <HBox prefHeight="1035.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
