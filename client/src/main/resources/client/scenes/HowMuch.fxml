<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane id="root" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.HowMuchCtrl">
    <StackPane styleClass="pad, margin">
        <Button fx:id="backButton" onAction="#back" styleClass="border, rounded, drop-shadow" text="Back"
                StackPane.alignment="TOP_LEFT"/>
    </StackPane>
    <VBox alignment="CENTER" maxWidth="1000" StackPane.alignment="CENTER">
        <Region minHeight="100" styleClass="margin" VBox.vgrow="ALWAYS"/>
        <Text fx:id="question" styleClass="title" text="Question" textAlignment="CENTER" BorderPane.alignment="CENTER"/>
        <Region maxHeight="60" styleClass="margin" VBox.vgrow="ALWAYS"/>
        <ImageView fx:id="imageView" fitHeight="250.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/sample.jpg"/>
            </image>
        </ImageView>
        <Region maxHeight="20" styleClass="margin" VBox.vgrow="ALWAYS"/>
        <Text fx:id="description" styleClass="description" text="Description" textAlignment="CENTER"
              BorderPane.alignment="CENTER"/>
        <Region minHeight="40" styleClass="margin" VBox.vgrow="ALWAYS"/>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="answer_1" prefHeight="150.0" prefWidth="350.0" styleClass="border, rounded, drop-shadow"
                        text="Answer-1"/>
                <Button fx:id="answer_2" prefHeight="150.0" prefWidth="350.0" styleClass="border, rounded, drop-shadow"
                        text="Answer-2" GridPane.columnIndex="2"/>
                <Button fx:id="answer_3" prefHeight="150.0" prefWidth="350.0" styleClass="border, rounded, drop-shadow"
                        text="Answer-3" GridPane.columnIndex="4"/>
            </children>
        </GridPane>
        <Region minHeight="150" styleClass="margin" VBox.vgrow="ALWAYS"/>
    </VBox>
</StackPane>
