<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<StackPane
  xmlns="http://javafx.com/javafx/17"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="client.scenes.ConnectScreenCtrl"
>
  <HBox StackPane.alignment="TOP_CENTER" maxHeight="0" maxWidth="Infinity" styleClass="pad, margin">
    <Button
      fx:id="backButton"
      styleClass="icon, border, rounded, drop-shadow"
      StackPane.alignment="TOP_LEFT"
      onAction="#exit"
      text=""
    /> <!-- text is \uf053 (back arrow in font awesome) -->
    <Region HBox.hgrow="ALWAYS"/>
    <Button
      fx:id="helpButton"
      styleClass="icon, border, rounded, drop-shadow"
      StackPane.alignment="TOP_RIGHT"
      onAction="#help"
      text=""
    /> <!-- text is \uf059 (help in font awesome) -->
  </HBox>
  <VBox spacing="20" alignment="CENTER" maxWidth="640" StackPane.alignment="CENTER">
    <Text styleClass="title" text="Quizzzzz" textAlignment="CENTER" BorderPane.alignment="CENTER"/>
    <Region maxHeight="120" styleClass="margin" VBox.vgrow="ALWAYS"/>
    <TextField fx:id="nameField" promptText="Name (Optional)" styleClass="border, rounded, drop-shadow"/>
    <TextField fx:id="serverField" promptText="Server IP" styleClass="border, rounded, drop-shadow"/>
    <Button fx:id="playButton" onAction="#connect" styleClass="border, rounded, drop-shadow" text="Connect"/>
  </VBox>
</StackPane>
