        <TextField fx:id="serverField" promptText="Server IP" styleClass="border, rounded, drop-shadow" />
        <Region maxHeight="40" styleClass="margin" VBox.vgrow="ALWAYS" />
        <Button fx:id="playButton" onAction="#play" styleClass="border, rounded, drop-shadow" text="Play" />
