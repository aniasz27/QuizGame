    <StackPane styleClass="pad, margin">
        <Button fx:id="backButton" onAction="#exit" styleClass="border, rounded, drop-shadow" text="Back" StackPane.alignment="TOP_LEFT" />
      <Button fx:id="helpButton" onAction="#exit" styleClass="border, rounded, drop-shadow" text="?" StackPane.alignment="TOP_RIGHT" />
