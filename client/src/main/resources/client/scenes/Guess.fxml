<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane id="root" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../css/Guess.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.GuessCtrl">
    <StackPane styleClass="pad, margin">
        <Button fx:id="backButton" onAction="#back" styleClass="border, rounded, drop-shadow" text="Back" StackPane.alignment="TOP_LEFT" />
    </StackPane>
    <VBox alignment="TOP_CENTER" maxWidth="800" StackPane.alignment="CENTER">
        <Region maxHeight="50" minHeight="30" styleClass="margin" VBox.vgrow="ALWAYS" />
        <ProgressBar id="timebar" fx:id="timebar" minWidth="700" progress="0.59" style="-fx-background-color: white; -fx-opacity: 100; -fx-fill: white;" styleClass="border, rounded, drop-shadow" stylesheets="@../css/Guess.css" />
        <Region maxHeight="50" minHeight="100" styleClass="margin" VBox.vgrow="ALWAYS" />

        <Text fx:id="question" styleClass="title" text="How much energy does this.activity cost?" textAlignment="CENTER" StackPane.alignment="CENTER" />
        <Region maxHeight="100" minHeight="50" styleClass="margin" VBox.vgrow="ALWAYS" />
        <TextField fx:id="answer" promptText="Type in your answer" styleClass="border, rounded, drop-shadow" />
        <Region maxHeight="70" minHeight="40" styleClass="margin" VBox.vgrow="ALWAYS" />
        <Button onAction="#submit" styleClass="border, rounded, drop-shadow" text="Submit" />


    </VBox>
</StackPane>
