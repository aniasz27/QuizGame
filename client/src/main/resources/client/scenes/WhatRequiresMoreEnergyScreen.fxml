<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>

<StackPane id="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="client.scenes.WhatRequiresMoreEnergyCtrl">
    <HBox maxHeight="0" maxWidth="Infinity" styleClass="pad, margin" StackPane.alignment="TOP_CENTER">
        <Button fx:id="backButton" onAction="#back" styleClass="icon, border, rounded, drop-shadow" text=""
                StackPane.alignment="TOP_LEFT"/> <!-- text is \uf053 (back arrow in font awesome) -->
        <Region HBox.hgrow="ALWAYS"/>
        <StackPane>
            <Line endX="800" stroke="#553794" strokeLineCap="ROUND" strokeWidth="20" StackPane.alignment="CENTER_LEFT"/>
            <Line fx:id="timer" endX="800" stroke="#0586e3" strokeLineCap="ROUND" strokeWidth="20"
                  styleClass="drop-shadow" StackPane.alignment="CENTER_LEFT"/>
        </StackPane>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="helpButton" onAction="#help" styleClass="icon, border, rounded, drop-shadow" text=""
                StackPane.alignment="TOP_RIGHT"/>
    </HBox>
    <VBox alignment="CENTER" maxWidth="640" spacing="40" BorderPane.alignment="CENTER">
        <Text fx:id="points" text="Points:" translateY="60.0"/>
        <Region styleClass="margin" VBox.vgrow="ALWAYS"/> <!-- text is \uf059 (help in font awesome) -->

        <Text styleClass="title" text="What requires more energy?" textAlignment="CENTER"
              BorderPane.alignment="CENTER"/>
        <HBox spacing="20">
            <Button fx:id="button0" mnemonicParsing="false" onMouseClicked="#checkCorrectAnswer"
                    styleClass="question, border, rounded, drop-shadow, button" HBox.hgrow="ALWAYS"/>
            <Button fx:id="button1" mnemonicParsing="false" onMouseClicked="#checkCorrectAnswer"
                    styleClass="question, border, rounded, drop-shadow, button" HBox.hgrow="ALWAYS"/>
            <Button fx:id="button2" mnemonicParsing="false" onMouseClicked="#checkCorrectAnswer"
                    styleClass="question, border, rounded, drop-shadow, button" HBox.hgrow="ALWAYS"/>
        </HBox>
        <Region styleClass="margin" VBox.vgrow="ALWAYS"/>
    </VBox>
</StackPane>
