<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>
<StackPane
        id="root"
        xmlns="http://javafx.com/javafx/17"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="client.scenes.WhatRequiresMoreEnergyCtrl"
>
    <HBox StackPane.alignment="TOP_CENTER" maxHeight="0" maxWidth="Infinity" styleClass="pad, margin">
        <Button
                fx:id="backButton"
                styleClass="icon, border, rounded, drop-shadow"
                StackPane.alignment="TOP_LEFT"
                onAction="#back"
                text=""
        /> <!-- text is \uf053 (back arrow in font awesome) -->
        <Region HBox.hgrow="ALWAYS"/>
        <StackPane>
            <Line strokeWidth="20" strokeLineCap="ROUND" endX="800" stroke="#553794" StackPane.alignment="CENTER_LEFT"/>
            <Line
                    strokeWidth="20" strokeLineCap="ROUND" stroke="#0586e3"
                    endX="800"
                    StackPane.alignment="CENTER_LEFT"
                    fx:id="timer"
                    styleClass="drop-shadow"
            />
        </StackPane>
        <Region HBox.hgrow="ALWAYS"/>
        <Button
                fx:id="helpButton"
                styleClass="icon, border, rounded, drop-shadow"
                StackPane.alignment="TOP_RIGHT"
                onAction="#help"
                text=""
        /> <!-- text is \uf059 (help in font awesome) -->
        <Text fx:id="points" text="Points:"/>
    </HBox>
    <VBox spacing="40" alignment="CENTER" maxWidth="640" BorderPane.alignment="CENTER">
        <Region styleClass="margin" VBox.vgrow="ALWAYS"/>
        <Text styleClass="title" text="What requires more energy?" textAlignment="CENTER"
              BorderPane.alignment="CENTER"/>
        <HBox spacing="20">
            <Button
                    styleClass="question, border, rounded, drop-shadow, button"
                    fx:id="button0"
                    mnemonicParsing="false"
                    onMouseClicked="#checkCorrectAnswer"
                    HBox.hgrow="ALWAYS"
            />
            <Button
                    styleClass="question, border, rounded, drop-shadow, button"
                    fx:id="button1"
                    mnemonicParsing="false"
                    onMouseClicked="#checkCorrectAnswer"
                    HBox.hgrow="ALWAYS"
            />
            <Button
                    styleClass="question, border, rounded, drop-shadow, button"
                    fx:id="button2"
                    mnemonicParsing="false"
                    onMouseClicked="#checkCorrectAnswer"
                    HBox.hgrow="ALWAYS"
            />
        </HBox>
        <Region styleClass="margin" VBox.vgrow="ALWAYS"/>
    </VBox>
</StackPane>
